<body>
  <div class="container mt-5">
    <div class="card p-4 shadow" style="background-color: #7F78D2;">
        <h1 class="text-center text-white"><%= sponsor ? 'Editeaza' : 'Creeaza un nou' %> sponsor!</h1>
        <form action="<%= sponsor ? '/sponsor/edit/' + sponsor._id : '/sponsor' %>" method="post" class="p-3">
            <div class="mb-3">
                <label for="nume" class="form-label text-white">Nume sponsor:</label>
                <input type="text" class="form-control" id="nume" name="nume" value="<%= sponsor ? sponsor.nume : '' %>" required>
            </div>  
            <div class="mb-3">
                <label for="descriere" class="form-label text-white">Descriere:</label>
                <textarea class="form-control" id="descriere" name="descriere" rows="3" required><%= sponsor ? sponsor.descriere : '' %></textarea>
            </div>
            <button type="submit" class="btn btn-custom w-100">Trimite</button>
        </form>
    </div>
