  <body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Lista de bilete disponibile</h1>
        <div class="text-center mb-3">
            <% if (user) { %>
            <a href="/ticket/new" class="btn btn-custom">Adauga un bilet nou</a>
            <% } %>
        </div>
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>ID Bilet</th>
                    <th>Nume Eveniment</th>
                    <th>Pret Bilet</th>
                    <th>Actiune</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach((ticket) => { %>
                <tr>
                    <td><%= ticket._id %></td>
                    <td><%= ticket.eveniment?.titlu %></td>
                    <td><%= ticket.pret %></td>
                    <td> <form action="/cart/add/<%= ticket._id %>" method="post">
                        <button class="btn btn-custom" type="submit">Adauga in cos!</button>
                    </form>
                </tr>
                <% }); %>
            </tbody>
        </table>  
    </div>
</body>
